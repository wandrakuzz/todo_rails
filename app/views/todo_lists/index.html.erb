<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1>Main Todo List</h1>
  <div>
    <%= link_to "Json Endpoint", all_lists_path, class: "btn btn-sm btn-info" %>
    <%= link_to "New todo list", new_todo_list_path, {:class => "btn btn-primary btn-sm"} %>
  </div>
  
</div>

<div class="" id="todo_lists">
	<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Progress %</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  	<% @todo_lists.each do |todo_list| %>
      <%= render :partial => "todo_lists/todo_list_table", :locals =>{:todo_list => todo_list} %> 
    <% end %>
  </tbody>
</table>
</div>
